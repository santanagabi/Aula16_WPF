                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>


        <Menu DockPanel.Dock="Top" Grid.Column="2" Background="White">
            <MenuItem Header="_Exibir" Background="White">
                <MenuItem Header="_Zoom" />
